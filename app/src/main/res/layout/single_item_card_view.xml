<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ffffff"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/wamitvblcok" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="15dp"
                android:paddingTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/channelVi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/small_albertteju" />

                <TextView
                    android:id="@+id/headerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/channelVi"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scrollHorizontally="true"
                    android:text="AriWaves Header Title"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fullDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headerText"
                    android:layout_toEndOf="@+id/channelVi"
                    android:layout_toRightOf="@+id/channelVi"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scrollHorizontally="true"
                    android:text="Description"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fullDesc"
                    android:layout_toEndOf="@+id/channelVi"
                    android:layout_toRightOf="@+id/channelVi"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="AgriWaves Tv"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/publishAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fullDesc"
                    android:layout_toEndOf="@+id/textDescription"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Date Created"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />


                <!--<TextView-->
                <!--android:id="@+id/postText"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="10dp"-->
                <!--android:text="TV Show"-->
                <!--android:textAppearance="?android:attr/textAppearanceMedium" />-->

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">


                <Button
                    android:id="@+id/watchView"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="36dp"
                    android:layout_toLeftOf="@+id/overflow"
                    android:layout_toStartOf="@+id/overflow"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_youtubetwo"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/favouriteVid"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="36dp"
                    android:layout_toLeftOf="@+id/overflow"
                    android:layout_toStartOf="@+id/overflow"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_add_favorite"

                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/shareVid"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="36dp"
                    android:layout_toLeftOf="@+id/overflow"
                    android:layout_toStartOf="@+id/overflow"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_sharer"

                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/overflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_more_vert_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>